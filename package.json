{
	"name": "portfolio-v2",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"dev:server": "nodemon --watch server.ts --watch src/api --exec ts-node server.ts",
		"dev:client": "npm run build:client && vite --config vite.config.ts dev",
		"build": "rimraf dist && tsc -p tsconfig.prod.json && npm run build:client && npm run build:server",
		"build:client": "vite build --outDir dist --ssrManifest",
		"build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
		"typecheck": "tsc --noEmit",
		"serve": "npm run build && cross-env NODE_ENV=production npm run node ./server",
		"serve:local": "vite serve",
		"clean": "rimraf dist/",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@phosphor-icons/react": "^2.0.10",
		"express": "^4.18.2",
		"framer-motion": "^10.16.4",
		"prop-types": "^15.8.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-error-boundary": "^4.0.11",
		"react-responsive-masonry": "^2.1.7",
		"react-router-dom": "^6.15.0",
		"three": "^0.156.1",
		"valtio": "^1.11.2"
	},
	"devDependencies": {
		"@types/compression": "^1.7.3",
		"@types/express": "^4.17.17",
		"@types/node": "^20.5.9",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@types/react-responsive-masonry": "^2.1.0",
		"@types/serve-static": "^1.15.2",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitejs/plugin-react": "^4.0.3",
		"autoprefixer": "^10.4.15",
		"compression": "^1.7.4",
		"eslint": "^8.45.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.3",
		"nodemon": "^3.0.1",
		"postcss": "^8.4.29",
		"prettier": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"rimraf": "^5.0.1",
		"serve-static": "^1.15.0",
		"tailwindcss": "^3.3.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.2",
		"vite": "^4.4.5",
		"vite-tsconfig-paths": "^4.2.0"
	}
}
